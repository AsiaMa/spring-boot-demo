<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oasis.demo2.dao.AddressMapper">
    <resultMap id="BaseResultMap" type="com.oasis.demo2.domain.entity.AddressEntity">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="address_name" jdbcType="VARCHAR" property="addressName"/>
    </resultMap>

    <resultMap id="MultiResultMap" type="com.oasis.demo2.domain.entity.AddressEntity" extends="BaseResultMap">
        <collection property="addressList" column="id" select="com.oasis.demo2.dao.AccountMapper.selectByAddressId"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, address_name
    </sql>

    <select id="selectById" parameterType="int" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from address
        where id = #{addressId}
    </select>

    <select id="selectLinkById" parameterType="int" resultMap="MultiResultMap">
        select
        <include refid="Base_Column_List"/>
        from address
        where id = #{addressId}
    </select>
</mapper>
